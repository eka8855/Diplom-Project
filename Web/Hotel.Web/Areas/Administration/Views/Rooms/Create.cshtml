@model RoomInputModel

<form enctype="multipart/form-data"  method="post" class="col-md-6 offset-md-3">
	<h3>Cъздай стая</h3>
	<div class="form-group">
		<label>Име</label>
		<input asp-for="Name" class="form-control" />
		<span asp-validation-for="Name" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label>Тип</label>
		<input asp-for="Type" class="form-control" />
		<span asp-validation-for="Type" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label>Цена</label>
		<input asp-for="Price" class="form-control" />
		<span asp-validation-for="Price" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label>Свободни стаи</label>
		<input asp-for="NumberAvailable" class="form-control" />
		<span asp-validation-for="NumberAvailable" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label>Снимка</label>
		<input asp-for="Image" name="Image" class="form-control" />
		<span asp-validation-for="Image" class="text-danger"></span>
	</div>
	<input type="submit" class="btn btn-primary" />
</form>